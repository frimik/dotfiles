[http]
	sslVerify = false
[user]
	email = mfridh@ea.com
	name = Mikael Fridh
[core]
	autocrlf = input
[push]
	default = simple
[merge]
  tool = winmerge
[mergetool "winmerge"]
  cmd = 'C:/Program Files (x86)/WinMerge/WinMergeU.exe' \"$MERGED\"
[color]
  diff = auto
  status = auto
  branch = auto
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  anchor = tag -f anchor
  s = status
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
  pushInsteadOf = "https://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"
